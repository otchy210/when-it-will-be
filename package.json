{
    "name": "when-it-will-be",
    "version": "0.0.1",
    "description": "A Chrome Extension which helps to know when it will be.",
    "main": "index.js",
    "scripts": {
        "build:manifest": "node ./bin/build-manifest.js",
        "build": "npm run build:manifest && webpack --mode production",
        "watch": "webpack --watch --mode development",
        "lint": "eslint --no-error-on-unmatched-pattern src/*",
        "lint:fix": "eslint --fix --no-error-on-unmatched-pattern src/*",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/otchy210/when-it-will-be.git"
    },
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/otchy210/when-it-will-be/issues"
    },
    "homepage": "https://github.com/otchy210/when-it-will-be#readme",
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@typescript-eslint/eslint-plugin": "^5.18.0",
        "@typescript-eslint/parser": "^5.18.0",
        "eslint": "^8.12.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "jest": "^27.5.1",
        "prettier": "^2.6.2",
        "ts-jest": "^27.1.4",
        "ts-loader": "^9.2.8",
        "typescript": "^4.6.3",
        "webpack": "^5.71.0",
        "webpack-cli": "^4.9.2"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "globals": {
            "ts-jest": {
                "useESM": true
            }
        },
        "preset": "ts-jest/presets/default-esm",
        "setupFilesAfterEnv": [
            "<rootDir>/src/jest-setup.ts"
        ]
    }
}
